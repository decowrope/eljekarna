<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css">
    <link rel="stylesheet" href="/styles/stil.css">
    <link rel="stylesheet" href="/styles/cart.css">
    <title>Webshop</title>
</head>
<body>

<header>
    <%- include('partials/header') %>
    <div class="header_logo_div"><a href="/" class="header_logo_a">eLjekarna</a></div>
    <div class="header_kategorija_div"><h1 class="header_kategorija_h1"><%= category ? category.name : "Dobrodošli!" %></h1></div>
    <div class="header_ikone">
        <a href="/cart" class="header_ikone_a">
            <i class="ri-shopping-cart-line">
                <% if (totalCount > 0) { %>
                    <p class="cart-counter"><%= totalCount %></p>
                <% } %>
            </i>
        </a>
        <a href="" target="_blank" class="header_ikone_a"><i class="ri-search-line"></i></a>
    </div>
</header>

<aside class="aside_wrapper">
    <nav class="kategorije">
        <ul class="kategorije_ul">
            <% categories.forEach(category => { %>
                <li class="kategorije_li">
                    <a href="/home/getProducts/<%= category.id %>" class="kategorije_a"><%= category.name %></a>
                </li>
            <% }) %>
        </ul>
    </nav>
    <div class="kontakt">
        <ul class="aside_kontakt_ul">
            <li class="aside_kontakt_li"><a href="#" class="aside_kontakt_a">Kontakt</a></li>
            <li class="aside_kontakt_li"><a href="#" class="aside_kontakt_a">Newsletter</a></li>
            <li class="aside_kontakt_li"><a href="#" class="aside_kontakt_a">Pretplati se</a></li>
        </ul>
    </div>
</aside>

<main>
    <section class="pozdravni">
        <h1 class="pozdravni_h1">Dobrodošli!</h1>
        <img src="/images/lijepa.webp" alt="slika" class="pozdravni_img">
    </section>
    <section class="proizvodi">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="proizvodi_p">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="proizvodi_p_img">
                    <p class="proizvodi_p_ime"><%= product.name %></p>
                
                    <% if (cart[product.id] > 0) { %>
                        <div class="quantity">
                            <p id="product<%= product.id %>Quantity"><%= cart[product.id] %></p>
                        </div>
                    <% } %>
                    <i class="ri ri-shopping-cart-line cart-icon" data-product-id="<%= product.id %>"></i>
                </div> 
            <% }) %>
        <% } %>
    </section>

    <%- include('partials/footer') %>

    
</main>

<script src="/scripts/hover.js"></script>
<script src="/scripts/click.js"></script>

</body>
</html>
